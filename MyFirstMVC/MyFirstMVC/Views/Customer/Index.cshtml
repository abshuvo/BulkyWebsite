@model IEnumerable<MyFirstMVC.Models.Customer>

    <h1>Index</h1>
    <a asp-action="Create">Create New</a>
  
<table class="table">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model=>model.Id)</th>
            <th scope="col">@Html.DisplayNameFor(model=>model.Name)</th>
            <th scope="col">@Html.DisplayNameFor(model=>model.Address)</th>
            <th scope="col">@Html.DisplayNameFor(model=>model.Phone)</th>
            <th scope="col">@Html.DisplayNameFor(model=>model.Email)</th>
        </tr>
    </thead>
    <tbody>

        @foreach(var item in Model){
        <tr>
            <th scope="row">@Html.DisplayFor(m=>item.Id)</th>
                <td>@Html.DisplayFor(m=>item.Name)</td>
                <td>@Html.DisplayFor(m=>item.Address)</td>
                <td>@Html.DisplayFor(m=>item.Phone)</td>
                <td>@Html.DisplayFor(m=>item.Email)</td>
        </tr>
        }
        </tbody>
        </table>

